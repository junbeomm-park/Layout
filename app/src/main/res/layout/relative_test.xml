<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- RelativeLayout 상대적 기준이 있어야 한다 .
        기준1 => 부모뷰 (레이아웃)
        기준2 => 특정 뷰 (특정 뷰를 기준으로 잡을 때는 id속성이 정의되어 있어야 한다.)

    -->
    <TextView
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:background="#1635DD"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#84DF1B"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#661CEA"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#FFEB3B"
        android:layout_alignParentLeft="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#03A9F4"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="#F877A3"
        android:layout_centerVertical="true"
        />
    <RelativeLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="#ff0000"
        android:layout_centerInParent="true"
        >
    <TextView
        android:id="@+id/yellowtxt"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#FF9800"
        android:layout_centerInParent="true"
        />
    <TextView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#8BC34A"
        android:layout_toRightOf="@+id/yellowtxt"
        />


    </RelativeLayout>
</RelativeLayout>